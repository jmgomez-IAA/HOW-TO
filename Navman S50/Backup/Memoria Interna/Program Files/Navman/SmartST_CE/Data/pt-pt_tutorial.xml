<!-- page 02 -->
<resource class="view" title="GPS" backbutton="true" forwardbutton="true">
<displayables>
	<displayable class="image" src="tutorial_gps_status" x="404" y="20" />
	<displayable class="label" textstyle="standard" x="15" y="10" width="390" height="120">O aparelho recebe sinais do Sistema de Posicionamento Global (GPS) através de uma antena integrada.</displayable>
	<displayable class="label" textstyle="standard" x="15" y="79" width="450" height="120">Para receber um sinal forte, certifique-se de que o aparelho tem uma visibilidade desobstruída do céu.</displayable>
	<displayable class="label" textstyle="standard" x="15" y="125" width="450" height="120">Para ver o ecrã do Estado do GPS, toque na bússola e depois toque sem largar </displayable>
	<displayable class="image" src="tutorial_gps" x="205" y="150" />
	<displayable class="label" textstyle="standard" x="238" y="148" width="20" height="20">.</displayable>
</displayables>
</resource>
<!-- page 03 -->
<resource class="view" title="Menu Principal" backbutton="true" forwardbutton="true">
<displayables>
	<displayable class="image" src="tutorial_main_menu" x="347" y="10" />
	<displayable class="label" textstyle="standard" x="15" y="10" width="330" height="100">O Menu Principal permite-lhe introduzir uma morada para a viagem, procurar Pontos de Interesse e personalizar preferências.</displayable>
	<displayable class="label" textstyle="standard" x="15" y="125" width="450" height="100">Pode aceder ao Menu Principal tocando na barra de estado na parte de baixo de qualquer ecrã.</displayable>
</displayables>
</resource>
<!-- page 04 -->
<resource class="view" title="Navegação" backbutton="true" forwardbutton="true">
<displayables>
	<displayable class="image" x="347" y="35" src="tutorial_destination1"/>
	<displayable class="image" x="347" y="115" src="tutorial_destination2"/>
	<displayable class="label" textstyle="standardbold" x="15" y="8" width="430" height="50">Como planeio a minha primeira viagem?</displayable>
	<displayable class="label" textstyle="standardbold" x="15" y="35" width="20" height="20">•</displayable>
	<displayable class="label" textstyle="standard" x="30" y="35" width="315" height="80">No Menu Principal, toque </displayable>
	<displayable class="image" x="225" y="37" src="tutorial_address_button"/>
	<displayable class="label" textstyle="standard" x="256" y="35" width="295" height="120"> (Morada).</displayable>
	<displayable class="label" textstyle="standardbold" x="15" y="83" width="20" height="20">•</displayable>
	<displayable class="label" textstyle="standard" x="30" y="85" width="315" height="80">Introduza o país, cidade, rua e número da porta do destino.</displayable>
</displayables>
</resource>
<!-- page 05 -->
<resource class="view" title="Navegação" backbutton="true" forwardbutton="true">
<displayables>
	<displayable class="image" x="347" y="10" src="tutorial_destination3"/>
	<displayable class="image" x="347" y="90" src="tutorial_map_screen1"/>
	<displayable class="label" textstyle="standardbold" x="15" y="8" width="20" height="20">•</displayable>
	<displayable class="label" textstyle="standard" x="30" y="10" width="295" height="80">Após ter introduzido a morada, toque </displayable>
	<displayable class="image" x="30" y="37" src="tutorial_go_button"/>
	<displayable class="label" textstyle="standard" x="57" y="33" width="315" height="80"> (Ir).</displayable>
	<displayable class="label" textstyle="standardbold" x="15" y="83" width="20" height="20">•</displayable>
	<displayable class="label" textstyle="standard" x="30" y="85" width="295" height="80">O Navman irá calcular a rota e apresentará o ecrã do Mapa a 3D.</displayable>
</displayables>
</resource>
<!-- page 06 -->
<resource class="view" title="Visualizações do Mapa" backbutton="true" forwardbutton="true">
<displayables>
	<displayable class="label" textstyle="standard" x="15" y="10" width="450" height="60">Existem cinco visualizações do mapa para visualizar a rota até ao destino:</displayable>
	<displayable class="label" textstyle="standardbold" x="15" y="55" width="20" height="20">•</displayable>
	<displayable class="label" textstyle="standard" x="35" y="55" width="415" height="24">Mapa a 3D</displayable>
	<displayable class="label" textstyle="standardbold" x="15" y="75" width="20" height="20">•</displayable>
	<displayable class="label" textstyle="standard" x="35" y="75" width="415" height="24">Mapa a 2D</displayable>
	<displayable class="label" textstyle="standardbold" x="15" y="95" width="20" height="20">•</displayable>
	<displayable class="label" textstyle="standard" x="35" y="95" width="415" height="24">Visão Geral do Trânsito (se disponível)</displayable>
	<displayable class="label" textstyle="standardbold" x="15" y="115" width="20" height="20">•</displayable>
	<displayable class="label" textstyle="standard" x="35" y="115" width="415" height="24">Visão Geral da Rota</displayable>
	<displayable class="label" textstyle="standardbold" x="15" y="135" width="20" height="20">•</displayable>
	<displayable class="label" textstyle="standard" x="35" y="135" width="310" height="24">Turn-by-Turn (Curva-a-Curva)</displayable>
	<displayable class="image" x="347" y="50" src="tutorial_map_screen2"/>
	<displayable class="label" textstyle="standard" x="15" y="160" width="450" height="60">Para passar por uma sequência de visualizações do mapa, toque </displayable>
	<displayable class="image" x="65" y="185" src="tutorial_map_button"/>
	<displayable class="label" textstyle="standard" x="89" y="185" width="120" height="20">.</displayable>
</displayables>
</resource>
